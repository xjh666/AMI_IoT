<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.13">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textColor="@color/colorAccent"
                android:textSize="40sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="-25dp" />

            <Button
                android:id="@+id/AllHosts"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="0.13"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:onClick="showAllHosts"
                android:text="All Hosts"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="162dp" />

            <Button
                android:id="@+id/HostGroups"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="0.13"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:onClick="showHostGroups"
                android:text="Hosts Groups"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="162dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="26dp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monitor"
                android:textColor="@color/colorAccent"
                android:textSize="40sp" />

            <Button
                android:id="@+id/HostConfigurationStatus"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="0.13"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:onClick="showHostConfigurationStatus"
                android:text="Host Configuration Status"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="162dp" />

            <Button
                android:id="@+id/HostConfigurationChart"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="0.13"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:onClick="showHostConfigurationChart"
                android:text="Host Configuration Chart"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="162dp" />

            <Button
                android:id="@+id/RunDistribution"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="0.13"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:onClick="showRunDistribution"
                android:text="Run Distribution(last 30 minutes)"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="162dp" />

            <Button
                android:id="@+id/LatestEvents"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="0.13"
                android:background="@android:drawable/dialog_holo_light_frame"
                android:onClick="showLatestEvents"
                android:text="Latest Events"
                android:textSize="18sp"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="162dp" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>