<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foremanproject">
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/foreman_helmet"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/foreman_helmet"
        android:supportsRtl="true">

        <activity android:name=".activity.Login" android:theme="@style/LoginTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.MonitorPage" android:theme="@style/BasicActivityTheme"></activity>
        <activity android:name=".activity.HostsOfAHostGroup" android:theme="@style/SecondActivityTheme" ></activity>
        <activity android:name=".activity.Parameters" android:theme="@style/SecondActivityTheme"></activity>
        <activity android:name=".activity.ParameterInfo" android:theme="@style/PopupWindowTheme"></activity>
        <activity android:name=".activity.HostDetail" android:theme="@style/SecondActivityTheme"></activity>

    </application>

</manifest>